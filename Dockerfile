FROM python:3.10-slim

WORKDIR /app

# install dependencies
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

# copy source
COPY . .

# set python path
ENV PYTHONPATH=/app

# default command
CMD ["python", "-m", "src.server"]
