FROM python:3.10-slim

# set work directory
WORKDIR /app

# install dependencies
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

# copy project
COPY . .

# set env
ENV PYTHONPATH=.

# default command
CMD ["python", "-m", "src.server"]
