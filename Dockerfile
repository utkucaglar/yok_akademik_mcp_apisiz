FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

# Copy code
COPY src ./src
COPY data ./data
COPY mcp.json ./mcp.json

# Patch server to fix experimental capabilities type
RUN sed -i "s/ExperimentalCapabilities()/ExperimentalCapabilities().__dict__/g" src/server.py

ENV PYTHONPATH=.

ENTRYPOINT ["python", "-m", "src.server"]
