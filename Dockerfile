FROM python:3.10-slim

# Set workdir
WORKDIR /app

# Copy requirements
COPY requirements.txt ./

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy project
COPY . /app

# Ensure src package discoverable
ENV PYTHONPATH=.

# Set entrypoint
ENTRYPOINT ["python", "-m", "src.server"]
