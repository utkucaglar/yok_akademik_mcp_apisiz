FROM python:3.10-slim

# Set working directory
WORKDIR /app

# Copy requirements and install
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

# Copy all source
COPY . .

# Set environment
ENV PYTHONPATH=.

# Default command
CMD ["python", "-m", "src.server"]
